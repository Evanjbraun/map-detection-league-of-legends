# Server Configuration
HOST=127.0.0.1
PORT=8765
DEBUG=true
LOG_LEVEL=DEBUG

# Communication Protocol
PROTOCOL=websocket
ENABLE_HTTP_FALLBACK=true

# Detection Features
ENABLE_CHAMPION_DETECTION=true
ENABLE_JUNGLE_DETECTION=true
ENABLE_OBJECTIVE_DETECTION=true
ENABLE_LANE_DETECTION=true
ENABLE_TOWER_DETECTION=true

# Performance
PROCESSING_THREADS=4
TARGET_FPS=30
MAX_PROCESSING_TIME_MS=50
DETECTION_CONFIDENCE_THRESHOLD=0.6

# Screen Capture
CAPTURE_METHOD=mss
AUTO_DETECT_MINIMAP=true
MINIMAP_CORNER=bottom_right

# Manual Calibration (only used if AUTO_DETECT_MINIMAP=false or auto-detection fails)
# These coordinates will be auto-populated after first calibration
MINIMAP_X=0
MINIMAP_Y=0
MINIMAP_WIDTH=0
MINIMAP_HEIGHT=0

# Template Matching
TEMPLATE_MATCH_THRESHOLD=0.7
USE_GPU_ACCELERATION=false

# OCR
OCR_ENGINE=easyocr
TESSERACT_PATH=

# Serialization
# IMPORTANT: Use "json" for debugging, "msgpack" for production
SERIALIZATION_FORMAT=json
