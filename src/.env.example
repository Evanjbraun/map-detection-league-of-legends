# Server Configuration
HOST=127.0.0.1
PORT=8765
DEBUG=false
LOG_LEVEL=INFO

# Communication Protocol
# Options: "websocket" (fastest), "http" (compatible)
PROTOCOL=websocket
ENABLE_HTTP_FALLBACK=true

# Detection Features
ENABLE_CHAMPION_DETECTION=true
ENABLE_JUNGLE_DETECTION=true
ENABLE_OBJECTIVE_DETECTION=true
ENABLE_LANE_DETECTION=true
ENABLE_TOWER_DETECTION=true

# Performance
PROCESSING_THREADS=4
TARGET_FPS=30                    # Target analysis rate (0=unlimited)
MAX_PROCESSING_TIME_MS=50        # Timeout per frame
DETECTION_CONFIDENCE_THRESHOLD=0.6

# Screen Capture
CAPTURE_METHOD=mss               # mss (fastest), win32, pillow
AUTO_DETECT_MINIMAP=true
MINIMAP_CORNER=bottom_right

# Calibration (if auto-detect fails)
MINIMAP_X=0
MINIMAP_Y=0
MINIMAP_WIDTH=250
MINIMAP_HEIGHT=250

# Template Matching
TEMPLATE_MATCH_THRESHOLD=0.7
USE_GPU_ACCELERATION=false

# OCR
OCR_ENGINE=easyocr              # tesseract or easyocr
TESSERACT_PATH=

# Serialization
# Options: "json" (compatible), "msgpack" (fastest)
SERIALIZATION_FORMAT=msgpack
